<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MenuTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textSize">@dimen/_40ssp</item>
        <item name="android:textColor">@color/color_menu_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuTextView.Sub">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_menu_text</item>
    </style>

    <style name="WinnerTextView" parent="MenuTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_menu_text</item>
    </style>

    <style name="WinnerTextView.Sub" parent="WinnerTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_menu_text</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_menu_text</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="iconSize">@dimen/_24sdp</item>
    </style>

    <style name="MenuButton.Options" parent="MenuButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="QuizButton">
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--        <item name="android:background">?selectableItemBackground</item>-->
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_menu_text</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <!--        <item name="android:insetTop">0dp</item>-->
        <!--        <item name="android:insetBottom">0dp</item>-->
        <item name="iconGravity">textStart</item>
        <item name="iconSize">@dimen/_16sdp</item>
    </style>

    <style name="PopupMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_menu_text</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="iconSize">@dimen/_24sdp</item>
    </style>

    <style name="ItemQuizTitle">
        <item name="android:textColor">@color/color_menu_text</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ItemQuizTitle.Description" parent="ItemQuizTitle">
        <item name="android:textColor">@color/color_sub_title</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Question">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_marginTop">@dimen/_48sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Option">
        <item name="android:background">@drawable/selector_option</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
    </style>

    <style name="StyleCircleIconLeft">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/shape_settings_circle_image</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
    </style>

    <style name="StyleCircleIconRight">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_gravity">center</item>
            <!--<item name="android:padding">@dimen/_8sdp</item>-->
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:scaleType">centerCrop</item>

        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

    <style name="StyleSettingsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_56sdp</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
        <item name="android:background">@drawable/shape_settings</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="StyleCheckBoxSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="StyleTextViewSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="StyleTextViewItemStatistics">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="StyleDialogButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="background">@android:color/transparent</item>
        <item name="cornerRadius">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>