<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_24sdp"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/container"
    android:background="@drawable/shape_category_item"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_quiz"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:background="@android:color/transparent"
        android:padding="@dimen/_4sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_science" />

    <TextView
        android:id="@+id/category"
        style="@style/ItemQuizTitle"
        android:layout_marginBottom="@dimen/_8sdp"
        tools:text="@string/text_category_science" />

    <TextView
        android:id="@+id/category_description"
        style="@style/ItemQuizTitle.Description"
        android:layout_marginBottom="@dimen/_8sdp"
        android:justificationMode="inter_word"
        tools:text="@string/text_category_science_description" />

</androidx.appcompat.widget.LinearLayoutCompat>