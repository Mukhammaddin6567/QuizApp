<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleSettingsContainer"
    android:layout_marginVertical="@dimen/_4sdp">

    <androidx.appcompat.widget.AppCompatImageView
        style="@style/StyleCircleIconLeft"
        android:src="@drawable/ic_records" />

    <TextView
        android:gravity="center"
        android:id="@+id/text_day"
        style="@style/StyleTextViewItemStatistics"
        tools:text="Дата: 2022-03-22" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_coins"
        android:gravity="center"
        style="@style/StyleCircleIconRight"
        tools:text="128"
        android:drawableTop="@drawable/ic_coin" />


</androidx.appcompat.widget.LinearLayoutCompat>
